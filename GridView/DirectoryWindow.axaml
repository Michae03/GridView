<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        CanResize="False"
        Width="200"
        Height="65"
        x:Class="GridView.DirectoryWindow"
        Title="DirectoryWindow">
    <Border BorderThickness="2" BorderBrush="DarkSlateGray">
        <StackPanel>
            <TextBox Watermark="Nazwa pliku" Name="Dir"></TextBox>
            <StackPanel Orientation="Horizontal" Spacing="50">
                <Button Click="Accept_OnClick" HorizontalAlignment="Right" >Zatwierdz</Button>
                <Button Click="Cancel_OnClick" HorizontalAlignment="Left">Anuluj</Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
